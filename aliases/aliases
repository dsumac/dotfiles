# shell
alias al=alias
alias ual=unalias

# ls
alias ldir='ls -d */'
alias ld=ldir


# dirs
alias d='dirs -lv'
alias pu='pushd'
alias po='popd'

# editors
alias vi=vim

# diff tools
alias diff=colordiff
alias dif=diff
alias difq='diff -q'
alias dify='diff -y'
alias difr='diff -r'

# file space
alias dus='du -hs * | sort -hr'
